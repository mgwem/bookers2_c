<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Create Group</h1>
      <%= form_with model: @group do |f| %>
        <%= f.label :name, "グループ名", class: "mt-3" %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.label :introduction, "紹介文", class: "mt-3" %>
        <%= f.text_area :introduction, class: "form-control" %>
        <%= f.label :group_image, "グループ画像", class: "mt-3" %><br>
        <%= f.file_field :group_image %><br>
        <%= f.submit "Create Group", class: "btn btn-info mt-3" %>
      <% end %>
    </div>
  </div>
</div>