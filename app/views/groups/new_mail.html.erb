<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2>Event Mail</h2>
      <%= form_with url: group_mail_event_path(@group), method: :get, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "form-control" %>
        </div>
        <div class="text-right">
          <%= f.submit "送信", class: "btn btn-success" %>
        </div>
      <% end %>
      <div class="my-5">
        <%= link_to "look mail", letter_opener_web_path %>
      </div>
    </div>
  </div>
</div>